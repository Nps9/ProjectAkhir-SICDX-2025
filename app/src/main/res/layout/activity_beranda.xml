<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageViewHeader"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo_lampung"
            android:contentDescription="Logo Lampung"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp" />


        <TextView
            android:id="@+id/textViewQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Travel brings power and love back into your life."
            android:textStyle="italic"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <!-- ðŸ”´ COMMIT: Menambahkan TextView Judul utama -->
        <TextView
            android:id="@+id/textViewJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang di Wisata Lampung"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Tombol Daftar Wisata -->
        <Button
            android:id="@+id/btnWisata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daftar Wisata"
            android:backgroundTint="#03A9F4"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Tombol Tentang Aplikasi -->
        <Button
            android:id="@+id/btnTentang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tentang Aplikasi"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
