<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"> <!-- Ganti background jadi biru muda -->

    <!-- Konten scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
        <!-- Latar belakang putih -->
        android:background="#FFFFFFFF"

        android:padding="16dp"
        android:layout_margin="12dp"
        android:elevation="4dp"
        android:layout_gravity="center"
        android:backgroundTint="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang di Aplikasi Wisata Lampung"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:padding="8dp" />

        <!-- Input nama + refresh -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/editTextNama"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Masukkan Nama Kamu"
                android:inputType="textPersonName"
                android:backgroundTint="#03A9F4" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_rotate"
                android:contentDescription="Refresh Nama"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Gender -->
        <RadioGroup
            android:id="@+id/radioGroupGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <RadioButton
                android:id="@+id/radioLaki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laki-laki" />

            <RadioButton
                android:id="@+id/radioPerempuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perempuan"
                android:layout_marginStart="20dp" />
        </RadioGroup>

        <!-- Persetujuan -->
        <CheckBox
            android:id="@+id/main_btn_checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saya menyetujui"
            android:layout_marginTop="16dp" />

        <!-- Spinner -->
        <Spinner
            android:id="@+id/spinnerTujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <!-- Tanggal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Kunjungan:"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Tanggal" />

        <TextView
            android:id="@+id/textTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="8dp"
            android:textStyle="italic" />

        <!-- Catatan -->
        <EditText
            android:id="@+id/editTextCatatan"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Catatan tambahan"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginTop="16dp"
            android:backgroundTint="#9C27B0" />

        <!-- Tombol Submit -->
        <Button
            android:id="@+id/main_btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#388E3C"
            android:textColor="#FFFFFF" />

        <!-- Hasil -->
        <TextView
            android:id="@+id/textHasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF5722"
            android:layout_marginTop="16dp" />

        <!-- Waktu -->
        <TextView
            android:id="@+id/textWaktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#757575"
            android:layout_marginTop="10dp" />

        <!-- Info -->
        <TextView
            android:id="@+id/textInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2025 Aplikasi Pariwisata Lampung"
            android:layout_gravity="center"
            android:textColor="#9E9E9E"
            android:textSize="12sp"
            android:layout_marginTop="20dp" />

        <!-- Tombol keluar -->
        <Button
            android:id="@+id/btnKeluar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keluar Aplikasi"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF" />
        <ScrollView>
            <LinearLayout>...</LinearLayout>
        </ScrollView>

